{
  "builders": [
    {
    "type": "amazon-ebs",
    "access_key": "",
    "secret_key": "",
    "ami_name": "bce",
    "instance_type": "m1.medium",
    "region": "us-west-2",
    "source_ami": "ami-f13e4dc1",
    "ssh_username": "ubuntu"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "dot-config",
      "destination": "/home/ubuntu/.config"
    },
    {
      "type": "file",
      "source": "python-requirements.txt",
      "destination": "/tmp/python-requirements.txt"
    },
    {
      "type": "file",
      "source": "R-packages.txt",
      "destination": "/tmp/R-packages.txt"
    },
    {
      "type": "shell",
      "script": "bootstrap-bce.sh",
      "environment_vars": "BCE_PROVISION=BCE",
      "execute_command": "echo 'ubuntu' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'"
    }
  ]
}
