{
  "builders": [
    {
    "type": "amazon-ebs",
    "access_key": "",
    "secret_key": "",
    "ami_name": "bce",
    "instance_type": "m1.medium",
    "region": "us-west-2",
    "source_ami": "ami-f13e4dc1",
    "ssh_username": "ubuntu"
    },
    {
    "vm_name": "BCE-0.1",
    "disk_size": 16000,
    "output_directory": "packer-ubuntu-14.04.1-i386-virtualbox",
    "type": "virtualbox-iso",
    "format": "ova",
    "boot_command": [
      "<esc><wait>",
      "<esc><wait>",
      "<enter><wait>",
      "/install/vmlinuz",
      " auto<wait>",
      " console-setup/ask_detect=false",
      " console-setup/layoutcode=us",
      " console-setup/modelcode=pc105<wait>",
      " debconf/frontend=noninteractive",
      " debian-installer=en_US",
      " fb=false",
      " initrd=/install/initrd.gz<wait>",
      " kbd-chooser/method=us",
      " keyboard-configuration/layout=USA",
      " keyboard-configuration/variant=USA",
      " locale=en_US<wait>",
      " netcfg/get_domain=vm",
      " netcfg/get_hostname=BCE",
      " noapic<wait>",
      " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-14.04/preseed.cfg",
      " --",
      "<enter><wait>"
    ],
    "http_directory": "http",
    "guest_additions_mode": "attach",
    "vboxmanage": [
      [
        "modifyvm",        "{{.Name}}",
        "--memory",        "1024",
        "--cpus",          "1",
        "--clipboard",     "bidirectional",
        "--draganddrop",   "bidirectional",
        "--vram",          "128",
        "--accelerate3d",  "on"
      ]
    ],
    "guest_os_type": "Ubuntu",
    "iso_checksum": "eec982cbe2455cd30c5a31c1f5a0500717280084",
    "iso_checksum_type": "sha1",
    "iso_url": "http://releases.ubuntu.com/14.04.1/ubuntu-14.04.1-desktop-i386.iso",
    "ssh_username": "oski",
    "ssh_password": "oski",
    "ssh_wait_timeout": "3000s",
    "shutdown_command": "echo 'oski' | sudo -S shutdown -P now"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "dot-config",
      "destination": "/home/oski/.config",
      "override": {
        "amazon-ebs": {
          "destination": "/home/ubuntu/.config"
        }
      }
    },
    {
      "type": "file",
      "source": "packages",
      "destination": "/tmp/packages"
    },
    {
      "type": "shell",
      "script": "bootstrap-bce.sh",
      "environment_vars": "BCE_PROVISION=BCE",
      "execute_command": "echo 'oski' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'",
      "override": {
        "amazon-ebs": {
          "execute_command": "echo 'ubuntu' | {{ .Vars }} sudo -E -S bash '{{ .Path }}'"
        }
      }
    }
  ]
}
